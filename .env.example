# House Consciousness System Environment Configuration

# Application Environment
ENVIRONMENT=production
DEBUG=false

# Database Configuration
DATABASE_URL=sqlite:///./data/consciousness.db

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Security Configuration
SECRET_KEY=your-super-secret-key-here-change-this
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# API Keys (External Services)
API_KEY_OPENAI=your-openai-api-key-here
API_KEY_ANTHROPIC=your-anthropic-api-key-here

# Monitoring Configuration
GRAFANA_PASSWORD=your-grafana-admin-password

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/consciousness.crt
SSL_KEY_PATH=/etc/ssl/certs/consciousness.key
FORCE_HTTPS=true

# Rate Limiting
API_RATE_LIMIT=100/hour
MAX_REQUEST_SIZE=10485760

# Device Security
DEVICE_AUTH_TIMEOUT=300
MAX_FAILED_AUTH_ATTEMPTS=5

# Backup Configuration
BACKUP_S3_BUCKET=your-backup-bucket-name
BACKUP_WEBHOOK_URL=https://hooks.slack.com/your-webhook-url

# Logging Configuration
LOG_LEVEL=INFO
LOG_SENSITIVE_DATA=false
AUDIT_LOG_RETENTION_DAYS=90

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook-url
