# House Consciousness System Environment Configuration
# Copy this file to .env and customize for your deployment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=production

# Enable debug mode (set to false for production)
DEBUG=false

# Host and port for the API server
API_HOST=0.0.0.0
API_PORT=8000

# Allowed hosts/domains (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Main database URL
# SQLite (default): sqlite+aiosqlite:///./data/consciousness.db
# PostgreSQL: postgresql+asyncpg://user:password@localhost/consciousness
DATABASE_URL=sqlite+aiosqlite:///./data/consciousness.db

# Test database (used during testing)
DATABASE_TEST_URL=sqlite+aiosqlite:///./test_consciousness.db

# =============================================================================
# REDIS CONFIGURATION (for caching and sessions)
# =============================================================================

# Redis connection URL
REDIS_URL=redis://redis:6379/0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Secret key for session encryption (CHANGE THIS!)
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# JWT token configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Encryption key for sensitive data storage
ENCRYPTION_KEY=your-32-character-encryption-key-here

# =============================================================================
# DEVICE DISCOVERY SETTINGS
# =============================================================================

# Enable/disable specific discovery protocols
ENABLE_BLUETOOTH=true
ENABLE_MDNS=true
ENABLE_UPNP=true
ENABLE_ZIGBEE=false

# Device authentication timeout (seconds)
DEVICE_AUTH_TIMEOUT=300

# Maximum failed authentication attempts before lockout
MAX_FAILED_AUTH_ATTEMPTS=5

# =============================================================================
# AI SERVICE API KEYS
# =============================================================================

# OpenAI API key (for advanced AI features)
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API key (for Claude integration)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# =============================================================================
# EXTERNAL SERVICE INTEGRATIONS
# =============================================================================

# Weather service API key
WEATHER_API_KEY=your-weather-api-key-here

# Energy provider API integration
ENERGY_PROVIDER_API_KEY=your-energy-api-key-here

# HomeKit integration PIN (format: XXX-XX-XXX)
HOMEKIT_PIN=123-45-678

# =============================================================================
# MONITORING AND METRICS
# =============================================================================

# Enable Prometheus metrics endpoint
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090

# Grafana admin password
GRAFANA_PASSWORD=your-grafana-admin-password

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (relative to project root)
LOG_FILE=logs/consciousness.log

# Log sensitive data (disable in production)
LOG_SENSITIVE_DATA=false

# Audit log retention period (days)
AUDIT_LOG_RETENTION_DAYS=90

# =============================================================================
# WEB UI AND CORS
# =============================================================================

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# =============================================================================
# SSL/TLS CONFIGURATION (for production)
# =============================================================================

# SSL certificate paths (for HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/consciousness.crt
SSL_KEY_PATH=/etc/ssl/certs/consciousness.key

# Force HTTPS redirects
FORCE_HTTPS=false

# =============================================================================
# RATE LIMITING AND SECURITY
# =============================================================================

# API rate limiting (requests/time period)
API_RATE_LIMIT=100/hour

# Maximum request size in bytes (10MB default)
MAX_REQUEST_SIZE=10485760

# =============================================================================
# CONSCIOUSNESS ENGINE SETTINGS
# =============================================================================

# How often to update emotional state (seconds)
EMOTION_UPDATE_INTERVAL=300

# Memory retention period (days)
MEMORY_RETENTION_DAYS=365

# Learning rate for adaptive behaviors (0.0-1.0)
LEARNING_RATE=0.01

# Prediction horizon for scenarios (hours)
PREDICTION_HORIZON_HOURS=24

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# S3 bucket for automated backups (optional)
BACKUP_S3_BUCKET=your-backup-bucket-name

# AWS credentials for S3 backups (if using)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-west-2

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Slack webhook URL for alerts and notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook-url

# Email notification settings (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# NOTIFICATION_EMAIL_FROM=consciousness@your-domain.com
# NOTIFICATION_EMAIL_TO=admin@your-domain.com

# =============================================================================
# DEVELOPMENT SETTINGS (only for development environment)
# =============================================================================

# Enable development features
# DEV_MOCK_DEVICES=true
# DEV_SKIP_AUTH=false
# DEV_RELOAD=true
